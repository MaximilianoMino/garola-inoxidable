---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Section from "@/components/ui/Section.astro";
import Card from "@/components/ui/Card.astro";
import { ArrowRight, Calendar } from "lucide-react";
import getSortedPosts from "@/data/getSortedPosts";
import { getCollection } from "astro:content";
import getPagination from "@/data/getPagination";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);

const pagination = getPagination({
  posts: sortedPosts,
  page: 1,
  isIndex: true,
});
---

<BaseLayout title="Blog - Garola Inoxidable">
  <Section background="gray">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
        {
          sortedPosts.map((post) => (
            <Card class="bg-[#1a1f24] border border-slate-800 flex flex-col">
              <div class="relative h-56 overflow-hidden rounded-t-xl">
                <img
                  src={post.data.image}
                  alt={post.data.title}
                  class="w-full h-full object-cover"
                />
                <span class="absolute top-4 left-4 text-xs font-semibold text-white px-3 py-1 rounded-full bg-red-600 uppercase">
                  {post.data.category}
                </span>
              </div>

              <div class="p-6 flex flex-col flex-grow">
                <h3 class="text-2xl font-bold text-white mb-3">
                  {post.data.title}
                </h3>

                <p class="text-slate-400 mb-4 flex-grow">
                  {post.data.description}
                </p>

                <div class="flex justify-between items-center text-sm mt-auto pt-4 border-t border-slate-800">
                  <span class="text-slate-500 flex items-center gap-2">
                    <Calendar className="w-4 h-4" />
                    {post.data.pubDatetime.toLocaleDateString()}
                  </span>

                  <a
                    href={`/blog/${post.slug}`}
                    class="text-red-600 hover:text-white font-semibold flex items-center gap-1"
                  >
                    Leer m√°s
                    <ArrowRight className="w-4 h-4 ml-1" />
                  </a>
                </div>
              </div>
            </Card>
          ))
        }
      </div>
    </div>
  </Section>
</BaseLayout>
