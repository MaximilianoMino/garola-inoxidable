---
import { NAVIGATION, SOCIAL_LINKS, SITE } from "@config/site";
import { Facebook, Instagram, Mail, MapPin } from "lucide-react";
---

<footer class="bg-[#14171A] text-slate-300 border-t border-slate-800">
  <div class="container mx-auto px-4 py-16 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-12 lg:grid-cols-4">
      <!-- Brand -->
      <div class="space-y-6">
        <a href="/" class="inline-block">
          <img src="/logo-garola.svg" alt="Garola Inoxidable" class="h-8" />
        </a>

        <p class="text-sm text-slate-400 leading-relaxed max-w-xs">
          {SITE.description}
        </p>

        <div class="flex gap-3">
          <a
            href={SOCIAL_LINKS.facebook}
            target="_blank"
            aria-label="Facebook"
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-slate-800/50 hover:bg-[#DC2828] transition-colors"
          >
            <Facebook className="w-5 h-5 text-white" />
          </a>

          <a
            href={SOCIAL_LINKS.instagram}
            target="_blank"
            aria-label="Instagram"
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-slate-800/50 hover:bg-[#DC2828] transition-colors"
          >
            <Instagram className="w-5 h-5 text-white" />
          </a>

          <a
            href={SOCIAL_LINKS.maps}
            target="_blank"
            aria-label="Ubicación"
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-slate-800/50 hover:bg-[#DC2828] transition-colors"
          >
            <MapPin className="w-5 h-5 text-white" />
          </a>

          <a
            href={SOCIAL_LINKS.gmail}
            aria-label="Email"
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-slate-800/50 hover:bg-[#DC2828] transition-colors"
          >
            <Mail className="w-5 h-5 text-white" />
          </a>
        </div>
      </div>

      <!-- Navigation -->
      <div>
        <h3
          class="text-sm font-semibold uppercase tracking-wider text-white mb-6"
        >
          Navegación
        </h3>
        <ul class="space-y-3">
          {
            NAVIGATION.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-sm text-slate-400 hover:text-[#DC2828] transition-colors"
                >
                  {item.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Industries -->
      <div>
        <h3
          class="text-sm font-semibold uppercase tracking-wider text-white mb-6"
        >
          Industrias
        </h3>
        <ul class="space-y-3 text-sm text-slate-400">
          <li>Lácteos</li>
          <li>Tambo</li>
          <li>Trabajos especiales</li>
        </ul>
      </div>

      <!-- CTA -->
      <div>
        <h3
          class="text-sm font-semibold uppercase tracking-wider text-white mb-6"
        >
          Contacto
        </h3>

        <p class="text-sm text-slate-400 mb-6 max-w-xs">
          ¿Querés cotizar un equipo o conocer más sobre nuestras soluciones?
        </p>

        <a
          href="/rfq"
          class="inline-flex items-center px-6 py-3 text-sm font-semibold text-white bg-[#DC2828] hover:bg-[#DC2828]/90 shadow-lg transition-all"
        >
          Contacto comercial
        </a>
      </div>
    </div>

    <!-- Bottom -->
    <div
      class="mt-16 pt-8 border-t border-slate-800 flex flex-col md:flex-row items-center justify-between gap-4 text-sm"
    >
      <p class="text-slate-400">
        © {new Date().getFullYear()} Garola Inoxidable. Todos los derechos reservados.
      </p>

      <div class="flex gap-6">
        <a href="/" class="text-slate-400 hover:text-[#DC2828]"> Privacidad </a>
        <a href="/" class="text-slate-400 hover:text-[#DC2828]"> Términos </a>
      </div>
    </div>
  </div>
</footer>
