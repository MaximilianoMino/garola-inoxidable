---
import { NAVIGATION, SOCIAL_LINKS, SITE } from '@config/site';
import { Package, Linkedin, Facebook, Instagram, Mail, MapPin } from 'lucide-react';
---

<footer class="bg-[#14171A] text-slate-300 border-t border-slate-800">
  <div class="container mx-auto px-4 py-16 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-12 lg:grid-cols-4">
      <!-- Company Info -->
      <div class="lg:col-span-1 space-y-6">
        <a href="/" class="flex items-center space-x-3 group">
          <span class="text-2xl font-bold text-white tracking-tight">
            GAROLA <span class="text-[#DC2828]">INOXIDABLE</span>
          </span>
        </a>
        <p class="text-sm text-slate-400 leading-relaxed max-w-xs">
          {SITE.description}
        </p>
        <div class="flex flex-wrap gap-3">
          <a
            href={SOCIAL_LINKS.facebook}
            target="_blank"
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-slate-800/50 text-slate-400 hover:bg-[#DC2828] hover:text-white transition-all"
            aria-label="Facebook"
          >
            <Facebook className="w-5 h-5" />
          </a>
          <a
            href={SOCIAL_LINKS.instagram}
            target="_blank"
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-slate-800/50 text-slate-400 hover:bg-[#DC2828] hover:text-white transition-all"
            aria-label="Instagram"
          >
            <Instagram className="w-5 h-5" />
          </a>
          <a
            href={SOCIAL_LINKS.maps}
            target="_blank"
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-slate-800/50 text-slate-400 hover:bg-[#DC2828] hover:text-white transition-all"
            aria-label="Google Maps"
          >
            <MapPin className="w-5 h-5" />
          </a>
          <a
            href={SOCIAL_LINKS.gmail}
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-slate-800/50 text-slate-400 hover:bg-[#DC2828] hover:text-white transition-all"
            aria-label="Gmail"
          >
            <Mail className="w-5 h-5" />
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-white mb-6">
          Navegación
        </h3>
        <ul class="space-y-3">
          {NAVIGATION.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-sm text-slate-400 hover:text-[#DC2828] transition-colors inline-flex items-center group"
              >
                <span class="w-0 group-hover:w-2 h-0.5 bg-[#DC2828] transition-all mr-0 group-hover:mr-2"></span>
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-white mb-6">
          Industrias
        </h3>
        <ul class="space-y-3">
          <li>
            <a href="/capabilities" class="text-sm text-slate-400 hover:text-[#DC2828] transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-[#DC2828] transition-all mr-0 group-hover:mr-2"></span>
              Lácteos
            </a>
          </li>
          <li>
            <a href="/capabilities" class="text-sm text-slate-400 hover:text-[#DC2828] transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-[#DC2828] transition-all mr-0 group-hover:mr-2"></span>
              Tambo
            </a>
          </li>
          <li>
            <a href="/capabilities" class="text-sm text-slate-400 hover:text-[#DC2828] transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-[#DC2828] transition-all mr-0 group-hover:mr-2"></span>
              Trabajos Especiales
            </a>
          </li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-white mb-6">
          Contacto
        </h3>
        <ul class="space-y-3 text-sm">
          <li>
            <a href="/rfq" class="text-slate-400 hover:text-[#DC2828] transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-[#DC2828] transition-all mr-0 group-hover:mr-2"></span>
              Solicitar Cotización
            </a>
          </li>
          <li>
            <a href="/rfq" class="text-slate-400 hover:text-[#DC2828] transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-[#DC2828] transition-all mr-0 group-hover:mr-2"></span>
              Contacto Directo
            </a>
          </li>
        </ul>
        
        <div class="mt-8">
          <a
            href="/rfq"
            class="inline-flex items-center px-6 py-3 text-sm font-semibold text-white bg-[#DC2828] hover:bg-[#DC2828]/90 shadow-lg hover:shadow-xl transition-all"
          >
            Empezar Proyecto
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-16 pt-8 border-t border-slate-800">
      <div class="flex flex-col md:flex-row items-center justify-between space-y-4 md:space-y-0">
        <p class="text-sm text-slate-400">
          &copy; {new Date().getFullYear()} GAROLA INOXIDABLE. Todos los derechos reservados.
        </p>
        <div class="flex items-center space-x-6 text-sm">
          <a href="/" class="text-slate-400 hover:text-[#DC2828] transition-colors">
            Política de Privacidad
          </a>
          <span class="text-slate-700">•</span>
          <a href="/" class="text-slate-400 hover:text-[#DC2828] transition-colors">
            Términos de Uso
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
