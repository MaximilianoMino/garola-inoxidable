---
import { Image } from "astro:assets";

import Board from "@assets/Panel-computrol-1024x576.png";

interface Technology {
  title: string;
  description: string;
  iconGradient: string;
  iconPath: string;
}

const technologies: Technology[] = [
  {
    title: "AUTO-RESET ANTE CORTES DE ENERGÍA",
    description:
      "Si se interrumpe el suministro eléctrico, el sistema retoma automáticamente el proceso sin perder el ciclo.",
    iconGradient: "from-red-600 to-red-700",
    iconPath:
      "M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15",
  },
  {
    title: "PROGRAMACIÓN AUTOMÁTICA",
    description:
      "Inicio programable por días y horarios definidos, reduciendo la intervención operativa.",
    iconGradient: "from-zinc-800 to-zinc-900",
    iconPath: "M12 8v4l3 3M12 2a10 10 0 100 20 10 10 0 000-20z",
  },
  {
    title: "SEGURIDAD DE CONFIGURACIÓN",
    description:
      "Acceso restringido mediante clave para proteger parámetros críticos del proceso.",
    iconGradient: "from-red-600 to-red-700",
    iconPath:
      "M12 11c1.657 0 3-1.343 3-3S13.657 5 12 5s-3 1.343-3 3 1.343 3 3 3zM5 21v-2a7 7 0 0114 0v2",
  },
  {
    title: "EXPORTACIÓN DE DATOS",
    description:
      "Registro y exportación vía USB para control de calidad, trazabilidad y auditorías.",
    iconGradient: "from-zinc-800 to-zinc-900",
    iconPath: "M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2M12 12v8m0 0l-3-3m3 3l3-3",
  },
];
---

<section
  class="py-24 bg-linear-to-b from-slate-900 via-slate-800 to-slate-900 relative overflow-hidden"
>
  <!-- Background pattern -->
  <div class="absolute inset-0 opacity-10">
    <div
      class="absolute inset-0"
      style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 40px 40px;"
    >
    </div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div>
        <div class="border-l-4 border-red-600 pl-6 mb-6">
          <span
            class="text-red-500 font-mono uppercase tracking-widest font-semibold text-sm"
          >
            INNOVACIÓN PREMIADA
          </span>
          <h2
            class="text-4xl md:text-5xl font-bold text-white uppercase tracking-tight"
          >
            Tablero inteligente
          </h2>
        </div>

        <p class="text-xl text-slate-300 mb-10 leading-tight">
          No solo fabricamos equipamiento industrial: desarrollamos el sistema
          que controla todo el proceso. El tablero inteligente de Garola es el
          cerebro del pasteurizador, diseñado para garantizar continuidad
          operativa, seguridad y trazabilidad.
        </p>

        <!-- Features -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {
            technologies.map((tech) => (
              <div class="flex items-start group">
                <div
                  class={`shrink-0 w-12 h-12 rounded-lg bg-linear-to-br ${tech.iconGradient} flex items-center justify-center mr-4 transition-transform group-hover:scale-110 shadow-lg`}
                >
                  <svg
                    class="w-6 h-6 text-white"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d={tech.iconPath}
                    />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-bold text-white mb-1 uppercase tracking-tight">
                    {tech.title}
                  </h3>
                  <p class="text-sm text-slate-400 leading-relaxed">
                    {tech.description}
                  </p>
                </div>
              </div>
            ))
          }
        </div>

        <!-- CTA -->
        <div class="mt-12">
          <a
            href="/rfq"
            class="inline-flex items-center px-8 py-4 text-base font-semibold text-white bg-red-600 hover:bg-red-700 rounded-lg shadow-lg hover:shadow-xl transition-all uppercase tracking-widest group"
          >
            CONSULTAR FUNCIONAMIENTO
            <svg
              class="w-5 h-5 ml-3 group-hover:translate-x-1 transition-transform"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Visual -->
      <div class="relative">
        <div
          class="relative rounded-2xl overflow-hidden shadow-2xl border border-slate-700"
        >
          <Image
            src={Board}
            alt="Tablero de control industrial"
            class="w-full h-full object-cover grayscale brightness-50"
          />

          <div
            class="absolute inset-0 bg-linear-to-br from-black/40 to-black/30"
          >
          </div>

          <div class="absolute inset-0 flex items-center justify-center p-8">
            <div class="text-center">
              <h3
                class="text-2xl font-bold text-white uppercase tracking-widest mb-2"
              >
                CONTROL DEL PROCESO
              </h3>
              <p class="text-slate-300 font-mono">SISTEMA OPERATIVO CONTINUO</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
