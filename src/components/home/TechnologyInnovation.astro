---
import { Image } from 'astro:assets';
import techDashboardImg from '@assets/photo-1551288049-bebda4e38f71.jpg';

interface Technology {
  title: string;
  description: string;
  iconGradient: string;
  iconPath: string;
}

const technologies: Technology[] = [
  {
    title: "AUTO-RESET INTELIGENTE",
    description: "Reinicio automático de ciclos tras cortes de energía, evitando pérdida de producción.",
    iconGradient: "from-red-600 to-red-700",
    iconPath: "M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
  },
  {
    title: "EFICIENCIA ENERGÉTICA",
    description: "Algoritmos de optimización de consumo para reducción de costos operativos.",
    iconGradient: "from-zinc-800 to-zinc-900",
    iconPath: "M13 10V3L4 14h7v7l9-11h-7z"
  },
  {
    title: "CONECTIVIDAD REMOTA",
    description: "Monitoreo y control en tiempo real desde cualquier dispositivo móvil o PC.",
    iconGradient: "from-red-600 to-red-700",
    iconPath: "M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071a9.9 9.9 0 0114.142 0M2.05 8.05a15.554 15.554 0 0121.9 0"
  },
  {
    title: "INTERFAZ INTUITIVA",
    description: "Pantallas táctiles de grado industrial con visualización clara de procesos.",
    iconGradient: "from-zinc-800 to-zinc-900",
    iconPath: "M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
  }
];
---

<section class="py-24 bg-linear-to-b from-slate-900 via-slate-800 to-slate-900 relative overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 40px 40px;"></div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div>
        <div class="inline-block px-4 py-2 mb-4 bg-red-600/10 backdrop-blur-sm text-red-600 text-sm font-semibold rounded-full border border-red-600/20 uppercase tracking-widest">
          INNOVACIÓN 4.0
        </div>
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-6 uppercase tracking-tight">
          TABLERO DE CONTROL <span class="text-red-600">INTELIGENTE</span>
        </h2>
        <p class="text-xl text-slate-300 mb-8 leading-relaxed">
          Nuestro sistema propietario de control HMI redefine la gestión de procesos. Diseñado específicamente para evitar pérdidas críticas en la industria alimenticia.
        </p>

        <!-- Technology Features -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {technologies.map((tech) => (
            <div class="flex items-start group">
              <div class={`shrink-0 w-12 h-12 rounded-lg bg-linear-to-br ${tech.iconGradient} flex items-center justify-center mr-4 group-hover:scale-110 transition-transform shadow-lg`}>
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={tech.iconPath} />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-bold text-white mb-1 uppercase tracking-tight">{tech.title}</h3>
                <p class="text-sm text-slate-400 leading-relaxed">
                  {tech.description}
                </p>
              </div>
            </div>
          ))}
        </div>

        <!-- CTA -->
        <div class="mt-10">
          <a 
            href="/rfq" 
            class="inline-flex items-center px-8 py-4 text-base font-semibold text-white bg-red-600 hover:bg-red-700 rounded-lg shadow-lg hover:shadow-xl transition-all group uppercase tracking-widest"
          >
            CONTACTO DIRECTO
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Visual -->
      <div class="relative">
        <div class="relative rounded-2xl overflow-hidden shadow-2xl border border-slate-700">
          <Image 
            src={techDashboardImg}
            alt="Advanced logistics technology dashboard"
            class="w-full h-full object-cover grayscale brightness-50"
            width={1200}
            height={800}
          />
          <div class="absolute inset-0 bg-linear-to-br from-black/80 via-red-900/40 to-black/80"></div>
          <div class="absolute inset-0 flex items-center justify-center p-8">
            <div class="text-center">
              <div class="w-24 h-24 mx-auto mb-6 rounded-full bg-red-600 flex items-center justify-center shadow-2xl animate-pulse">
                <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-white mb-2 uppercase tracking-widest">GAROLA CONTROL V4.2</h3>
              <p class="text-slate-300 font-mono">ESTADO: SISTEMA ACTIVO</p>
            </div>
          </div>
        </div>
        
        <!-- Floating Cards -->
        <div class="absolute -top-4 -right-4 bg-white rounded-lg p-4 shadow-xl z-20 animate-pulse">
          <div class="flex items-center">
            <div class="w-3 h-3 rounded-full bg-green-500 mr-2"></div>
            <span class="text-sm font-semibold text-slate-900">99.9% Uptime</span>
          </div>
        </div>
        <div class="absolute -bottom-4 -left-4 bg-white rounded-lg p-4 shadow-xl z-20 animate-pulse" style="animation-delay: 0.5s;">
          <div class="flex items-center">
            <div class="w-3 h-3 rounded-full bg-blue-500 mr-2"></div>
            <span class="text-sm font-semibold text-slate-900">Real-time Sync</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


