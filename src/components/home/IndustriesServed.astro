---
interface Industry {
  title: string;
  description: string;
  iconGradient: string;
  iconPath: string;
  features: string[];
}

const industries: Industry[] = [
  {
    title: "Lácteos",
    description: "Equipamiento especializado para la industria láctea con los más altos estándares de higiene y eficiencia.",
    iconGradient: "from-red-600 to-red-700",
    iconPath: "M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4",
    features: ["Tanques de enfriamiento", "Sistemas de pasteurización", "Líneas de proceso"]
  },
  {
    title: "Tambo",
    description: "Soluciones robustas para el sector primario, optimizando la recolección y el almacenamiento de leche.",
    iconGradient: "from-zinc-800 to-zinc-900",
    iconPath: "M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4",
    features: ["Equipos de ordeñe", "Almacenamiento certificado", "Mantenimiento preventivo"]
  },
  {
    title: "Trabajos Especiales",
    description: "Diseño y fabricación a medida de estructuras y equipos en acero inoxidable para requerimientos específicos.",
    iconGradient: "from-red-600 to-zinc-900",
    iconPath: "M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 011-1h1a2 2 0 100-4H7a1 1 0 01-1-1V7a1 1 0 011-1h3a1 1 0 011 1V4z",
    features: ["Proyectos a medida", "Corte y plegado", "Soldadura certificada"]
  }
];

const checkmarkPath = "M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z";
---

<section class="py-24 bg-[#14171A] text-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <div class="inline-block px-4 py-2 mb-4 bg-red-600/10 text-red-600 text-sm font-semibold rounded-full border border-red-600/20">
        NUESTRAS DIVISIONES
      </div>
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-6 uppercase tracking-tight">
        SECTORES <span class="text-red-600">INDUSTRIALES</span>
      </h2>
      <p class="text-xl text-slate-400 max-w-3xl mx-auto leading-relaxed">
        Soluciones integrales adaptadas a las normativas y requerimientos específicos de cada industria.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {industries.map((industry) => (
        <div class="group bg-[#1a1f24] rounded-2xl p-8 shadow-lg hover:shadow-red-900/10 transition-all hover:-translate-y-2 border border-slate-800">
          <div class={`w-16 h-16 rounded-xl bg-linear-to-br ${industry.iconGradient} flex items-center justify-center mb-6 group-hover:scale-110 transition-transform`}>
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={industry.iconPath} />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-white mb-3 uppercase tracking-tight">{industry.title}</h3>
          <p class="text-slate-400 leading-relaxed mb-4">
            {industry.description}
          </p>
          <ul class="space-y-2 text-sm text-slate-500">
            {industry.features.map((feature) => (
              <li class="flex items-center">
                <svg class="w-4 h-4 text-red-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d={checkmarkPath} clip-rule="evenodd" />
                </svg>
                {feature}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Bottom CTA -->
    <div class="text-center mt-16">
      <a 
        href="/capabilities" 
        class="inline-flex items-center px-8 py-4 text-base font-semibold text-white bg-red-600 hover:bg-red-700 rounded-lg shadow-lg hover:shadow-xl transition-all group uppercase tracking-widest"
      >
        Ver todos los sectores
        <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
